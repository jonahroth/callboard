<p id="notice"><%= notice %></p>

<h1>Rehearsals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rehearsals.each do |rehearsal| %>
      <tr>
        <td><%= rehearsal.title %></td>
        <td><%= link_to 'Show', rehearsal %></td>
        <td><%= link_to 'Edit', edit_rehearsal_path(rehearsal) %></td>
        <td><%= link_to 'Destroy', rehearsal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

