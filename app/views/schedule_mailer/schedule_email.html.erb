<h1><%= @schedule.production.title %> Rehearsal Schedule</h1>
<p><em>Generated by Prospero on <%= Date.today.to_s %></em></p>

<% @schedule.rehearsals.each do |rehearsal| %>
    <h3><%= rehearsal.start_time.strftime("%m/%d/%y") %></h3>
    <ul>
      <% rehearsal.works.each do |work| %>
          <li>
            <strong><%= work.start_time.strftime("%I:%M%p") %>:</strong> <%= work.name %> (<%= work.duration %>m) -
            <%= work.called.map {|c| "#{c.first} #{c.last}"}.to_sentence %>
          </li>
      <% end %>
    </ul>
<% end %>